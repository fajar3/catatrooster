<div class="backup-container">
  <!-- Alerts -->
  <% if (typeof success !== 'undefined') { %>
    <% if (success === 'import') { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>Data berhasil diimpor! <%= typeof count !== 'undefined' ? count + ' records' : '' %></span>
      </div>
    <% } else if (success === 'clear') { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>Semua data berhasil dihapus!</span>
      </div>
    <% } else if (success === 'import_db') { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>Database (.db) berhasil diupload! (Restart server untuk memuat DB baru)</span>
      </div>
    <% } %>
  <% } %>

  <% if (typeof error !== 'undefined') { %>
    <% if (error === 'no_file') { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-triangle"></i>
        <span>Tidak ada file yang dipilih!</span>
      </div>
    <% } else if (error === 'invalid_format') { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-triangle"></i>
        <span>Format file backup tidak valid!</span>
      </div>
    <% } else if (error === 'import_failed') { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-triangle"></i>
        <span>Import gagal! Pastikan file backup valid.</span>
      </div>
    <% } else if (error === 'wrong_confirm') { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-triangle"></i>
        <span>Konfirmasi salah! Ketik "HAPUS" untuk menghapus data.</span>
      </div>
    <% } %>
  <% } %>

  <div class="page-header">
    <div style="display:flex; justify-content:space-between; align-items:center;">
      <div>
        <h1 class="page-title"><i class="fas fa-database"></i> Backup & Restore Data</h1>
        <p class="page-subtitle">Kelola backup dan restore data asset Anda</p>
      </div>

      <!-- Asset selector (single) -->
      <form id="switchAssetForm" method="GET" action="/backup" style="display:flex; gap:12px; align-items:center;">
        <label style="color:#a0aec0; font-weight:600;">Pilih Asset:</label>
        <select name="asset" onchange="this.form.submit()" style="padding:8px; border-radius:8px;">
          <% (assets || []).forEach(a => { %>
            <option value="<%= a.id %>" <%= (a.id === parseInt(currentAsset)) ? 'selected' : '' %>><%= a.name %> (ID:<%= a.id %>)</option>
          <% }) %>
        </select>
      </form>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon blue"><i class="fas fa-money-bill-wave"></i></div>
      <div class="stat-info">
        <div class="stat-label">Pengeluaran</div>
        <div class="stat-value"><%= (stats && stats.totalPengeluaran) || 0 %> records</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon purple"><i class="fas fa-list"></i></div>
      <div class="stat-info">
        <div class="stat-label">Kebutuhan</div>
        <div class="stat-value"><%= (stats && stats.totalKebutuhan) || 0 %> records</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon pink"><i class="fas fa-egg"></i></div>
      <div class="stat-info">
        <div class="stat-label">Ayam</div>
        <div class="stat-value"><%= (stats && stats.totalAyam) || 0 %> records</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon green"><i class="fas fa-chart-line"></i></div>
      <div class="stat-info">
        <div class="stat-label">Pemasukan</div>
        <div class="stat-value"><%= (stats && stats.totalPemasukan) || 0 %> records</div>
      </div>
    </div>
  </div>

  <!-- Main Cards -->
  <div class="cards-grid">
    <div class="action-card">
      <div class="card-icon-large export"><i class="fas fa-download"></i></div>
      <h2 class="card-title">Export Data</h2>
      <p class="card-description">Download data dalam format JSON atau unduh file database (.db).</p>

      <div class="card-stats">
        <div class="mini-stat"><i class="fas fa-database"></i>
          <span><%= (stats && stats.totalRecords) || 0 %> Total Records</span>
        </div>
      </div>

      <div style="margin: 12px 0; text-align:left;">
        <label style="color:#a0aec0; font-weight:600;">Pilih asset untuk di-export (Ctrl/Cmd untuk multi-select):</label>
        <select id="exportSelect" multiple style="width:100%; padding:10px; border-radius:8px; margin-top:8px;">
          <% (assets || []).forEach(a => { %>
            <option value="<%= a.id %>"><%= a.name %> (ID:<%= a.id %>)</option>
          <% }) %>
        </select>
      </div>

      <div style="display:flex; gap:12px; margin-top:12px;">
        <button id="btnExportSelected" class="btn btn-export" style="flex:1;">
          <i class="fas fa-file-download"></i> Download Selected (JSON)
        </button>

        <a href="/export/json?asset=all" class="btn btn-export" style="flex:1;">
          <i class="fas fa-file-download"></i> Download Semua Asset
        </a>
      </div>

      <a href="/export/db" class="btn btn-export" style="margin-top:12px; display:block;">
        <i class="fas fa-file-download"></i> Download Raw Database (.db)
      </a>

      <div class="card-footer">
        <small><i class="fas fa-info-circle"></i> File JSON berisi semua tabel untuk asset yang dipilih.</small>
      </div>
    </div>

    <div class="action-card">
      <div class="card-icon-large import"><i class="fas fa-upload"></i></div>
      <h2 class="card-title">Import Data (JSON)</h2>
      <p class="card-description">Upload file backup JSON untuk restore data. Pilih mode merge (tambahkan) atau replace (timpa).</p>

      <form method="POST" action="/import/full?mode=merge&asset=<%= currentAsset %>" enctype="multipart/form-data" id="importForm">
        <div class="file-upload-wrapper">
          <input type="file" id="backupFile" name="backupFile" accept=".json" required hidden>
          <label for="backupFile" class="file-upload-label" style="cursor:pointer;">
            <i class="fas fa-cloud-upload-alt"></i>
            <span id="fileName">Pilih file backup (.json)</span>
          </label>
        </div>

        <div style="margin-bottom:8px;">
          <label><input type="radio" name="mode" value="merge" checked> Merge (tambahkan data)</label>
          &nbsp;&nbsp;
          <label><input type="radio" name="mode" value="replace"> Replace (timpa data asset di file)</label>
        </div>

        <button type="submit" class="btn btn-import" id="btnImport" disabled>
          <i class="fas fa-file-import"></i> Import Data
        </button>
      </form>

      <div class="card-footer">
        <small><i class="fas fa-exclamation-triangle"></i> Mode Replace akan menghapus data pada asset yang sama sebelum import.</small>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="danger-zone">
    <div class="danger-header">
      <div>
        <h3 class="danger-title"><i class="fas fa-exclamation-triangle"></i> Danger Zone</h3>
        <p class="danger-subtitle">Tindakan berikut tidak dapat dibatalkan!</p>
      </div>
    </div>

    <div class="danger-content">
      <div class="danger-info">
        <h4>Hapus Semua Data</h4>
        <p>Menghapus semua data pengeluaran, kebutuhan, ayam, dan pemasukan dari asset ini. Tindakan ini <strong>TIDAK DAPAT DIBATALKAN</strong>!</p>
      </div>

      <button onclick="showClearModal()" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Hapus Semua Data
      </button>

      <div style="margin-left:16px;">
        <h4>Import Raw Database (.db) — GANTI SELURUH DATABASE</h4>
        <p><strong>PERINGATAN:</strong> Tindakan ini mengganti file database berjalan. Server direkomendasikan untuk direstart setelah upload.</p>
        <form method="POST" action="/import/db" enctype="multipart/form-data" id="importDbForm">
          <input type="file" id="dbFile" name="dbFile" accept=".db" required>
          <div style="margin-top:8px;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Yakin ingin mengupload file .db dan mengganti seluruh database? Pastikan Anda sudah backup.')">
              <i class="fas fa-upload"></i> Upload dan Ganti Database
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Konfirmasi Hapus -->
<div id="clearModal" class="modal" role="dialog" aria-modal="true" aria-hidden="true">
  <div class="modal-content">
    <div class="modal-header">
      <h3><i class="fas fa-exclamation-triangle"></i> Konfirmasi Hapus Data</h3>
      <button onclick="closeClearModal()" class="modal-close" aria-label="Close"><i class="fas fa-times"></i></button>
    </div>

    <div class="modal-body">
      <p>Anda akan menghapus <strong>SEMUA DATA</strong> dari asset ini:</p>
      <ul>
        <li><%= (stats && stats.totalPengeluaran) || 0 %> Pengeluaran</li>
        <li><%= (stats && stats.totalKebutuhan) || 0 %> Kebutuhan</li>
        <li><%= (stats && stats.totalAyam) || 0 %> Data Ayam</li>
        <li><%= (stats && stats.totalPemasukan) || 0 %> Pemasukan</li>
      </ul>

      <p style="color:#ef4444; font-weight:600; margin-top:15px;">⚠️ Tindakan ini TIDAK DAPAT DIBATALKAN!</p>

      <form method="POST" action="/backup/clear?asset=<%= currentAsset %>" id="clearForm">
        <div class="form-group">
          <label for="confirmInput">Ketik "HAPUS" untuk konfirmasi:</label>
          <input type="text" name="confirm" id="confirmInput" placeholder="HAPUS" required autocomplete="off">
        </div>

        <div class="modal-actions">
          <button type="button" onclick="closeClearModal()" class="btn btn-secondary">Batal</button>
          <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Hapus Semua Data</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Export multi-selected assets
  document.getElementById('btnExportSelected').addEventListener('click', function(e){
    e.preventDefault();
    const sel = document.getElementById('exportSelect');
    const ids = Array.from(sel.selectedOptions).map(o => o.value);
    if (ids.length === 0) {
      alert('Pilih minimal 1 asset untuk di-export (atau klik "Download Semua Asset").');
      return;
    }
    const url = '/export/json?asset=' + encodeURIComponent(ids.join(','));
    window.location.href = url;
  });

  // File upload handler
  const fileInput = document.getElementById('backupFile');
  const fileName = document.getElementById('fileName');
  const btnImport = document.getElementById('btnImport');
  if (fileInput && fileName && btnImport) {
    fileInput.addEventListener('change', function(e) {
      if (e.target.files.length > 0) {
        fileName.textContent = e.target.files[0].name;
        btnImport.disabled = false;
      } else {
        fileName.textContent = 'Pilih file backup (.json)';
        btnImport.disabled = true;
      }
    });
  }

  // Import form validation
  const importForm = document.getElementById('importForm');
  if (importForm) {
    importForm.addEventListener('submit', function(e) {
      const file = fileInput.files[0];
      if (!file) { e.preventDefault(); alert('Pilih file backup terlebih dahulu!'); return; }
      if (!file.name.toLowerCase().endsWith('.json')) { e.preventDefault(); alert('File harus berformat JSON!'); return; }
      if (!confirm('Yakin ingin mengimpor data? Data akan ditambahkan/ditimpa sesuai mode yang dipilih.')) { e.preventDefault(); }
      // update action to include chosen mode
      const mode = document.querySelector('input[name="mode"]:checked')?.value || 'merge';
      this.action = `/import/full?mode=${encodeURIComponent(mode)}&asset=<%= currentAsset %>`;
    });
  }

  // Modal functions
  function showClearModal() {
    const modal = document.getElementById('clearModal');
    if (modal) {
      modal.classList.add('active');
      modal.setAttribute('aria-hidden','false');
      const input = document.getElementById('confirmInput');
      if (input) input.value = '';
    }
  }
  function closeClearModal() {
    const modal = document.getElementById('clearModal');
    if (modal) {
      modal.classList.remove('active');
      modal.setAttribute('aria-hidden','true');
    }
  }
  const clearModalEl = document.getElementById('clearModal');
  if (clearModalEl) {
    clearModalEl.addEventListener('click', function(e) { if (e.target === this) closeClearModal(); });
  }

  // Auto-close alerts after 5s
  setTimeout(() => {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      setTimeout(() => { if (alert && alert.parentNode) alert.parentNode.removeChild(alert); }, 300);
    });
  }, 5000);
</script>


