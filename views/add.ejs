<div class="form-page-container">
    <div class="form-container">
        <form action="/add?asset=<%= currentAsset %>" method="POST">
            <div class="form-group">
                <label for="nama">Pilih:</label>
                <select name="nama" id="nama" required>
                    <% kebutuhan.forEach(k => { %>
                        <option value="<%= k.nama %>"><%= k.nama %> (Rp <%= k.harga.toLocaleString() %>)</option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="jumlah">Jumlah:</label>
                <input type="number" name="jumlah" id="jumlah" required min="1" value="1">
            </div>

            <div class="form-actions">
                <button type="submit">Tambah Pengeluaran</button>
                <a href="/?asset=<%= currentAsset %>" class="btn">Kembali</a>
            </div>
        </form>
    </div>
</div>
